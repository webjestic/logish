{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "strict": 1,
        "no-duplicate-imports": 1,
        "no-unused-private-class-members": 1,
        "brace-style" : ["error", "1tbs", { "allowSingleLine": true }],
        "curly": ["error", "multi-or-nest"]
    }
}
